<!DOCTYPE struts PUBLIC
"-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
"http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>
    <!-- Configuration for the default package. -->
    <package name="default" extends="struts-default">
        <action name="">
            <result>vistas/login.jsp</result>
        </action>
    </package>
    
    <package name="usuario" extends="struts-default">
        <action name="loginCheck" class = "acciones.accionesLogin">
            <result name="success">vistas/listadoPartidos.jsp</result>
            <result name="error">vistas/login.jsp</result>
        </action>
        
        <action name="redirectUsuario" class="acciones.cargarUsuarios">
            <result>vistas/listadoUsuarios.jsp</result>
        </action>
        
        <action name="addUsuarioRedirect">
            <result>vistas/addUsuarios.jsp</result>
        </action>
        
        <action name="updateUsuarioRedirect" class="acciones.updateRedirect">
            <result name="success">vistas/updateUsuarios.jsp</result>
        </action>
        
        <action name="updateUsuario" class="acciones.updateUsuario">
            <result name="success">vistas/listadoUsuarios.jsp</result>
            <result name="input">vistas/updateUsuarios.jsp</result>
        </action>
        
        <action name="addUsuario" class="acciones.addUsuario">
            <result name="success">vistas/listadoUsuarios.jsp</result>
            <result name="input">vistas/addUsuarios.jsp</result>
        </action>
        
        <action name="registrarRedirect">
            <result>vistas/registrarUsuario.jsp</result>
        </action>
        
        <action name="registrarUsuario" class="acciones.registrarUsuario">
            <result name="success">vistas/listadoUsuarios.jsp</result>
            <result name="input">vistas/registrarUsuarios.jsp</result>
        </action>
        
        <action name="deleteUsuario" class="acciones.borrarUsuario">
            <result name="success">vistas/listadoUsuarios.jsp</result>
        </action>
        
        <action name="redirectLogout" class="acciones.logout">
            <result name="success">vistas/login.jsp</result>
        </action>
        
        
    </package>
    
    <package name="instalaciones" extends="struts-default">
        <action name="redirectInstalaciones" class="acciones.cargarInstalaciones">
            <result>vistas/listadoInstalaciones.jsp</result>
        </action>
        
        <action name="deleteInstalaciones" class="acciones.borrarInstalaciones">
            <result name="success">vistas/listadoInstalaciones.jsp</result>
        </action>
        
        <action name="addInstalacionesRedirect">
            <result>vistas/addInstalaciones.jsp</result>
        </action>
        
        <action name="addInstalacion" class="acciones.addInstalacion">
            <result name="success">vistas/listadoInstalaciones.jsp</result>
            <result name="input">vistas/addInstalaciones.jsp</result>
        </action>
        
        <action name="updateInstalacionesRedirect" class="acciones.updateRedirectInstalaciones">
            <result name="success">vistas/updateInstalaciones.jsp</result>
        </action>
        
        <action name="updateInstalacion" class="acciones.updateInstalacion">
            <result name="success">vistas/listadoInstalaciones.jsp</result>
            <result name="input">vistas/updateInstalaciones.jsp</result>
        </action>
    </package>
    
    <package name="partidos" extends="struts-default">
        <action name="deletePartidos" class="acciones.borrarPartidos">
            <result name="success">vistas/listadoPartidos.jsp</result>
        </action>
        
        <action name="addPartido" class="acciones.addPartido">
            <result name="success">vistas/listadoPartidos.jsp</result>
        </action>
        
        <action name="addPartidosRedirect" >
            <result>vistas/addPartido.jsp</result>
        </action>
    </package>
    <package name="equipos" extends="struts-default">
        <action name="cargarEquipos" class="acciones.cargarEquipos">
            <result name="success">vistas/listadoEquipo.jsp</result>
        </action>
        <action name="updateEquiposRedirect" class="acciones.updateEquiposRedirect">
            <result>vistas/updateEquipo.jsp</result>
        </action>
        <action name="updateEquipo" class="acciones.updateEquipo">
            <result>vistas/listadoEquipo.jsp</result>
        </action>
        <action name="deleteEquipos" class="acciones.deleteEquipos">
            <result name="success">vistas/listadoEquipo.jsp</result>
        </action>
        <action name="addEquipo" class="acciones.addEquipo">
            <result name="success">vistas/listadoEquipo.jsp</result>
            <result name="input">vistas/addEquipo.jsp</result>
        </action>
        <action name="addEquipoRedirect">
            <result>vistas/addEquipo.jsp</result>
        </action>
    </package>
    <package name="integrantes" extends="struts-default">
        <action name="addIntegranteRedirect" class="acciones.addIntegranteRedirect">
            <result name="success">vistas/addIntegrante.jsp</result>
        </action>
        <action name="addIntegrante" class="acciones.addIntegrante">
            <result name="success">vistas/listadoIntegrantes.jsp</result>
        </action>
        <action name="cargarIntegrantes" class="acciones.cargarIntegrantes">
            <result name="success" >vistas/listadoIntegrantes.jsp</result>
        </action>
        <action name="deleteIntegrante"  class="acciones.deleteIntegrante">
            <result name="success">vistas/listadoIntegrantes.jsp</result>
        </action>
        <action name="updateIntegranteRedirect" class="acciones.updateIntegranteRedirect">
            <result name="success">vistas/updateIntegrante.jsp</result>
        </action>
        <action name="updateIntegrante" class="acciones.updateIntegrante">
            <result name="success">vistas/listadoIntegrantes.jsp</result>
            <result name="input">vistas/updateIntegrante.jsp</result>
        </action>
    </package>
    
    <package name="estadisticas" extends="struts-default">
        
        <action name="redirectEstadisticas" class="acciones.cargarEstadisticas">
            <result>vistas/listadoEstadisticas.jsp</result>
        </action>
        
        <action name="deleteEstadisticas" class="acciones.borrarEstadisticas">
            <result name="success">vistas/listadoEstadisticas.jsp</result>
        </action>
        
        <action name="addEstadisticasRedirect" class="acciones.redirectEstadisticas">
            <result>vistas/addEstadisticas.jsp</result>
        </action>
        
        <action name="addEstadistica" class="acciones.addEstadisticas">
            <result name="success">vistas/listadoEstadisticas.jsp</result>
            <result name="input">vistas/addEstadisticas.jsp</result>
            <result name="error">vistas/addEstadisticas.jsp</result>
        </action>
        
    </package>
</struts>
